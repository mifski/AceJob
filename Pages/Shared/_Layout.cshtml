@using Microsoft.AspNetCore.Identity
@using AceJob.Model
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AceJob</title>
    
    <!-- Preconnect to CDNs for performance -->
<link rel="preconnect" href="https://cdn.jsdelivr.net">
  <link rel="preconnect" href="https://cdnjs.cloudflare.com">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Custom Styles -->
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Skip to main content (Accessibility) -->
    <a href="#main-content" class="visually-hidden-focusable">Skip to main content</a>
    
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark" aria-label="Main navigation">
    <div class="container">
       <a class="navbar-brand" href="/" aria-label="AceJob Home">
   <i class="bi bi-briefcase-fill me-2" aria-hidden="true"></i>AceJob
  </a>
   <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
         <span class="navbar-toggler-icon"></span>
        </button>
          <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav ms-auto">
    <li class="nav-item">
      <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Index" ? "active" : "")" href="/" aria-current="@(ViewContext.RouteData.Values["Page"]?.ToString() == "/Index" ? "page" : "false")">
       <i class="bi bi-house me-1" aria-hidden="true"></i>Home
            </a>
    </li>
          @if (User.Identity?.IsAuthenticated == true)
      {
     var currentUser = await UserManager.GetUserAsync(User);
   var displayName = currentUser?.FirstName ?? User.Identity.Name;
   var has2fa = currentUser != null && await UserManager.GetTwoFactorEnabledAsync(currentUser);
          var userInitials = string.IsNullOrEmpty(currentUser?.FirstName) ? "U" : 
  (currentUser.FirstName.Substring(0, 1) + (currentUser.LastName?.Substring(0, 1) ?? ""));

       <!-- Activity Logs Link -->
  <li class="nav-item">
  <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/AuditLogs" ? "active" : "")" href="/AuditLogs" aria-label="View Activity Logs">
   <i class="bi bi-clock-history me-1" aria-hidden="true"></i>Activity
           </a>
    </li>
 
       <!-- User dropdown menu -->
         <li class="nav-item dropdown">
               <a class="nav-link dropdown-toggle text-success d-flex align-items-center" href="#" role="button" 
    id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
     <span class="profile-avatar-sm me-2">@userInitials</span>
       <span class="d-none d-md-inline">@displayName</span>
 <span class="d-md-none">@userInitials</span>
      </a>
     <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
      <li class="px-3 py-2 border-bottom">
       <div class="d-flex align-items-center">
<span class="profile-avatar-sm me-2">@userInitials</span>
     <div>
 <div class="fw-bold">@displayName</div>
       <small class="text-muted">@currentUser?.Email</small>
   </div>
      </div>
     </li>
   <li>
   <a class="dropdown-item" href="/">
    <i class="bi bi-house me-2" aria-hidden="true"></i>Dashboard
            </a>
 </li>
     <li><hr class="dropdown-divider"></li>
    <li>
           <a class="dropdown-item" href="/ChangePassword">
     <i class="bi bi-key me-2" aria-hidden="true"></i>Change Password
        </a>
           </li>
    <li>
 <a class="dropdown-item" href="/TwoFactorAuth">
    <i class="bi bi-shield-lock me-2" aria-hidden="true"></i>Two-Factor Auth
      @if (has2fa)
      {
   <span class="badge bg-success ms-2">On</span>
       }
      </a>
        </li>
    <li><hr class="dropdown-divider"></li>
      <li>
        <form method="post" asp-page="/Logout" class="d-inline">
        <button type="submit" class="dropdown-item text-danger">
        <i class="bi bi-box-arrow-right me-2" aria-hidden="true"></i>Logout
      </button>
   </form>
      </li>
  </ul>
   </li>
 }
        else
      {
  <li class="nav-item">
       <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Login" ? "active" : "")" href="/Login">
        <i class="bi bi-box-arrow-in-right me-1" aria-hidden="true"></i>Login
        </a>
     </li>
      <li class="nav-item">
        <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Register" ? "active" : "")" href="/Register">
        <i class="bi bi-person-plus me-1" aria-hidden="true"></i>Register
        </a>
    </li>
    }
       </ul>
        </div>
     </div>
        </nav>
  </header>

    <main role="main" id="main-content" class="flex-grow-1 pb-3">
        @RenderBody()
    </main>

  <footer class="border-top footer text-muted bg-light mt-auto">
        <div class="container">
            <div class="row py-4">
      <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
 <h5 class="fw-bold mb-2">
           <i class="bi bi-briefcase-fill me-2"></i>AceJob
        </h5>
     <p class="mb-0 small">Your gateway to career opportunities with enterprise-grade security</p>
        </div>
<div class="col-md-6 text-center text-md-end">
      <h6 class="fw-bold mb-2">Security Features</h6>
  <p class="mb-1 small">
    <i class="bi bi-shield-check text-success me-1"></i>reCAPTCHA Protected
   </p>
        <p class="mb-0 small">
       <i class="bi bi-lock-fill text-primary me-1"></i>AES-256 Encryption
      </p>
    </div>
         </div>
   <hr class="my-2">
       <div class="text-center py-2">
    <small>&copy; 2025 AceJob - Secure Job Portal</small>
     </div>
   </div>
</footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  
    <!-- Custom Scripts Section -->
    @await RenderSectionAsync("Scripts", required: false)
    
    <!-- Global Toast Notification Container -->
  <div class="position-fixed top-0 end-0 p-3" style="z-index: 11">
        <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
   <div class="toast-header">
       <i class="bi bi-info-circle me-2"></i>
     <strong class="me-auto">Notification</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
    <div class="toast-body">
   <!-- Toast message goes here -->
    </div>
        </div>
    </div>

    <style>
   .profile-avatar-sm {
       display: inline-flex;
         align-items: center;
          justify-content: center;
            width: 32px;
    height: 32px;
            border-radius: 50%;
         background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);
      color: white;
        font-size: 0.875rem;
  font-weight: 700;
 }
     
     .nav-link.active {
            background-color: rgba(255, 255, 255, 0.1);
  border-radius: 0.5rem;
    }
        
        .visually-hidden-focusable:focus {
       position: static;
     width: auto;
        height: auto;
    }
    </style>
</body>
</html>
