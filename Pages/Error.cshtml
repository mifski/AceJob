@page
@model AceJob.Pages.ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
  <div class="card shadow-lg border-0">
    <div class="card-body py-5">
             @if (Model.ErrorCode == "404")
    {
      <div class="text-warning mb-4">
          <i class="bi bi-search" style="font-size: 5rem;"></i>
        </div>
      <h1 class="display-4 text-warning">404</h1>
          <h2 class="mb-4">Page Not Found</h2>
           <p class="lead text-muted mb-4">
    Sorry, the page you're looking for doesn't exist or has been moved.
      </p>
  }
      else if (Model.ErrorCode == "403")
          {
     <div class="text-danger mb-4">
         <i class="bi bi-shield-exclamation" style="font-size: 5rem;"></i>
        </div>
    <h1 class="display-4 text-danger">403</h1>
  <h2 class="mb-4">Access Denied</h2>
                <p class="lead text-muted mb-4">
    You don't have permission to access this resource.
    </p>
  }
           else if (Model.ErrorCode == "401")
              {
     <div class="text-info mb-4">
       <i class="bi bi-lock" style="font-size: 5rem;"></i>
 </div>
           <h1 class="display-4 text-info">401</h1>
        <h2 class="mb-4">Unauthorized</h2>
                <p class="lead text-muted mb-4">
       Please log in to access this page.
    </p>
       }
          else if (Model.ErrorCode == "500")
             {
    <div class="text-danger mb-4">
            <i class="bi bi-exclamation-triangle" style="font-size: 5rem;"></i>
      </div>
         <h1 class="display-4 text-danger">500</h1>
   <h2 class="mb-4">Internal Server Error</h2>
    <p class="lead text-muted mb-4">
    Something went wrong on our end. Please try again later.
     </p>
      }
              else
          {
       <div class="text-secondary mb-4">
          <i class="bi bi-emoji-frown" style="font-size: 5rem;"></i>
</div>
              <h1 class="display-4 text-secondary">Oops!</h1>
                <h2 class="mb-4">Something Went Wrong</h2>
       <p class="lead text-muted mb-4">
  An unexpected error occurred. Please try again.
                </p>
 }

       @if (!string.IsNullOrEmpty(Model.ErrorMessage))
     {
  <div class="alert alert-light border mb-4">
                <small class="text-muted">@Model.ErrorMessage</small>
      </div>
      }

           <div class="d-flex justify-content-center gap-3 flex-wrap">
         <a href="/" class="btn btn-primary btn-lg">
             <i class="bi bi-house me-2"></i>Go Home
      </a>
        @if (Model.ErrorCode == "401" || Model.ErrorCode == "403")
      {
  <a href="/Login" class="btn btn-outline-primary btn-lg">
             <i class="bi bi-box-arrow-in-right me-2"></i>Login
           </a>
 }
 <button onclick="history.back()" class="btn btn-outline-secondary btn-lg">
    <i class="bi bi-arrow-left me-2"></i>Go Back
    </button>
      </div>

           @if (!string.IsNullOrEmpty(Model.RequestId))
    {
      <div class="mt-4">
   <small class="text-muted">
        Request ID: <code>@Model.RequestId</code>
         </small>
       </div>
            }
         </div>
       </div>

        <!-- Helpful Links -->
         <div class="mt-4">
     <p class="text-muted mb-2">Helpful Links:</p>
         <div class="d-flex justify-content-center gap-3 flex-wrap">
       <a href="/" class="text-decoration-none">
        <i class="bi bi-house me-1"></i>Home
     </a>
            <a href="/Login" class="text-decoration-none">
   <i class="bi bi-box-arrow-in-right me-1"></i>Login
           </a>
        <a href="/Register" class="text-decoration-none">
               <i class="bi bi-person-plus me-1"></i>Register
       </a>
    </div>
    </div>
        </div>
    </div>
</div>
