@page "{handler?}"
@model AceJob.Pages.LogoutModel
@{
    ViewData["Title"] = "Logout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
     <div class="card shadow">
     <div class="card-body text-center">
<i class="bi bi-box-arrow-right text-danger" style="font-size: 3rem;"></i>
           <h2 class="mt-3">Logout</h2>
            <p class="text-muted mt-3">Are you sure you want to logout?</p>
      <p class="small text-muted">Your session will be cleared and you will be redirected to the login page.</p>
               <form method="post" class="mt-4">
         <button type="submit" class="btn btn-danger">
       <i class="bi bi-box-arrow-right me-2"></i>Yes, Logout
      </button>
       <a asp-page="/Index" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
  </div>
    </div>
    </div>
</div>
