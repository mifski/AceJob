@page
@model AceJob.Pages.ForgotPasswordModel
@{
 ViewData["Title"] = "Forgot Password";
}

<div class="container mt-5">
 <div class="row justify-content-center">
 <div class="col-sm-12 col-md-6 col-lg-5">
 <div class="card shadow">
 <div class="card-body">
 <h1 class="card-title text-center mb-4">Reset Password</h1>

 @if (!string.IsNullOrEmpty(Model.Message))
 {
 <div class="alert alert-info">@Model.Message</div>
 }

 <form method="post">
 <div class="mb-3">
 <label class="form-label">Email or Phone number</label>
 <input asp-for="Input.Contact" class="form-control" placeholder="Enter your email or phone" />
 <span asp-validation-for="Input.Contact" class="text-danger"></span>
 </div>

 <div class="d-grid gap-2">
 <button type="submit" class="btn btn-primary">Send reset link</button>
 </div>

 <div class="text-center mt-3">
 <a asp-page="/Login">Back to Login</a>
 </div>
 </form>
 </div>
 </div>
 </div>
 </div>
</div>
